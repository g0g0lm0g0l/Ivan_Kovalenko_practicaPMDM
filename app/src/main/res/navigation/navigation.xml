<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.ivan_kovalenko_practicapmdm.view.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >

        <action
            android:id="@+id/action_homeFragment_to_likedFragment"
            app:destination="@id/likedFragment" />
        <action
            android:id="@+id/action_homeFragment_to_infoFragment"
            app:destination="@id/infoFragment" />
        <action
            android:id="@+id/action_homeFragment_to_readedFragment"
            app:destination="@id/readedFragment" />
    </fragment>
    <fragment
        android:id="@+id/likedFragment"
        android:name="com.example.ivan_kovalenko_practicapmdm.view.LikedFragment"
        android:label="fragment_liked"
        tools:layout="@layout/fragment_liked" >
        <action
            android:id="@+id/action_likedFragment_to_infoFragment"
            app:destination="@id/infoFragment" />
        <action
            android:id="@+id/action_likedFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_likedFragment_to_readedFragment"
            app:destination="@id/readedFragment" />
    </fragment>
    <fragment
        android:id="@+id/readedFragment"
        android:name="com.example.ivan_kovalenko_practicapmdm.view.ReadedFragment"
        android:label="fragment_readed"
        tools:layout="@layout/fragment_readed" >

        <action
            android:id="@+id/action_readedFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/infoFragment"
        android:name="com.example.ivan_kovalenko_practicapmdm.view.InfoFragment"
        android:label="fragment_info"
        tools:layout="@layout/fragment_info" >
        <action
            android:id="@+id/action_infoFragment_to_likedFragment"
            app:destination="@id/likedFragment" />
        <action
            android:id="@+id/action_infoFragment_to_readedFragment"
            app:destination="@id/readedFragment" />
    </fragment>
</navigation>
